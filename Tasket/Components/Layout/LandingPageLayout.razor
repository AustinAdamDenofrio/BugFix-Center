@inherits LayoutComponentBase

<div class="d-flex h-100 flex-column">
    <!-- #region Nav Bar -->
    <header class="flex-shrink-0">
        <LandingPageNavMenu />
    </header>
    <!-- #endregion Nav Bar -->


    <section id="home" class="">
        <div id="homeCover" class="">
            <div class="mainHeader">
                <div class="mainTitle " id="mainSmaller">
                    <img src="/img/logo/BugTrackerHero_NoBG.png" class="mainLogo" />
                </div>
                <div class="w-100 mt-3 d-flex flex-grow-1 justify-content-center">
                    <a href="#contact" class="btn btn-info">
                        Try Bugtracker
                    </a>
                </div>
            </div>
        </div>
    </section>
    <main class="container-xxl flex-grow-1 py-2">
        @Body
    </main>

    <footer class="flex-shrink-0">
        <div class="footer p-3" data-bs-theme="dark">
            <div class="container-xxl text-body">
                <div class="row row-cols-1 row-cols-md-3 align-items-center">
                    <div class="col order-last order-md-first text-center text-md-start">
                        <div class="vstack gap-2">
                            <span>Built by: <img src="/img/logo/mark_dark.svg" height="25" /></span>
                            <span>&copy; @DateTime.Now.Year</span>
                        </div>
                    </div>
                    <div class="col text-center">
                        <img src="/img/logo/BugTracketSignature.png" height="60" />
                    </div>
                    <div class="col text-center text-md-end">
                        <div class="vstack">
                            <div>
                                <a href="https://www.linkedin.com/in/austin-denofrio-286792223/" target="_blank"><i class="bi bi-linkedin"></i></a>
                                <a href="https://twitter.com/A_Denofrio" target="_blank"><i class="bi bi-twitter"></i></a>
                                <a href="https://github.com/AustinAdamDenofrio" target="_blank"><i class="bi bi-github"></i></a>
                            </div>
                            <div class="small">
                                <a href="https://denofrio-fullstack-developer.netlify.app/">Portfolio</a>
                                &bull;
                                <a href="#">Blog</a>
                                &bull;
                                <a href="#">Bug Tracker</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>


    @*Error Handling. Dont delete*@
    <div id="blazor-error-ui">
        An unhandled error has occurred.
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
</div>

